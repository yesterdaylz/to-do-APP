<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lemon</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.ToDoApp</item>
    </style>
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->


        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyDatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/picker_btn</item>
        <item name="colorOnPrimary">@android:color/black</item>
    </style>

    <style name="MyTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/picker_btn</item>
        <item name="colorOnPrimary">@android:color/black</item>
    </style>
</resources>